extends layout.pug
block content
  .jumbotron.jumbotron-fluid.jumbotron-singleCourse.text-center.bg-transparent
    .bg-primary.position-fixed.left.top.z-minus.h-100.w-100
      video.half-transparent.w-100(autoplay='', muted='', loop='')
        source(src='/media/video.mp4', type='video/mp4')

    .jumbotron-courses-container.text-white
      h1.display-1.mt-5.mb-3.text-white Would you like to work with DCI?
      p.lead.mb-3 We offer on a roling basis different jobs in teaching and administration at DCI. Become part of an amazing team in one of Germanâ€™s most interesting social impact companies.
    
  .container.bg-white
    .mt-5.text-left
      .mb-3.sticky-top.bg-white.d-flex.justify-content-center.border-bottom.py-2
        ul.nav.nav-pills.border-0
          a.nav-link(href="/jobs" class=((currentPath === "/jobs" && !query.location) ? "active" : ""))="All"
          each location in locations
            li.nav-item.mx-2
              a.nav-link(class=(query.location === location.name ? "active" : "") href="/jobs?location="+location.name)=location.name
      .row
        .col
          +joblist(true)
            
