mixin singleEvent(event)
  li.list-group-item.mb-3.p-5
    .row
      pre.pre-xs-customise
        h2.mb-2.ml-3
          a.responsiveH2.linkHover.linksInvolved.animationLink(href=event.url target='_blank')=event.name
        p.responsiveP.ml-3.lead=event.start
    .row.mt-3
      .col-sm-12.col-md-12.col-lg-3.mb-4
        img.img-xs-customise.img-fluid.rounded.mt-3(src=event.imageurl)
      .col-sm-12.col-md-12.col-lg-9
        p.responsiveP.float-right.text-justify=event.text
        p:a.warningColorDark.responsiveP.float-right.mt-3(data-toggle='modal', data-target='#contactFormModal') 
          | Contact Us
