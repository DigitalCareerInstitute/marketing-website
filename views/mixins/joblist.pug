mixin joblist(public)


  each job in jobs
    .p-3.mb-5.bg-light.border-0.shadow
      a(href="/jobs/"+job.slug)
        h2.mr-3=job.name
      p
        span.mr-2 Location:
        each location in job.locations
          span.badge.badge-primary.mr-2=location.name
    
      each description in job.description
        h3.mr-3=description.name
        p.mr-3 !{description.value}


      
      a.btn.btn-outline-primary.mr-2(href="/jobs/"+job.slug) Show