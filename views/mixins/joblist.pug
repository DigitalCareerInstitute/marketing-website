mixin joblist(public)
  ul.list-group
    each job in jobs
      li.list-group-item.mb-3
        h2.mr-3=job.name
        p.mr-3=job.content
        each location in job.locations
          .badge.badge-primary.mr-2=location.name

        form.d-flex.justify-content-between(method='POST', action='/admin/jobs/delete/'+job.slug +'?_method=DELETE')
          a.btn.btn-outline-primary.mr-2(href="/jobs/"+job.slug) Show in Frontend

          if !public
            .d-flex.align-items-center
              a.btn.btn-outline-primary.mr-2(href="/admin/jobs/edit/"+job.slug) Edit
              button.btn.btn-outline-danger(type='submit') delete
