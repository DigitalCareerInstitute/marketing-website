mixin joblist(public)
  ul.list-group
    each job in jobs
      li.list-group-item.mb-5.bg-light.border-0
        h2.mr-3=job.name
        p
          span.mr-2 Location:
          each location in job.locations
            span.badge.badge-primary.mr-2=location.name
        p.mr-3=job.content


        if public
          a.btn.btn-outline-primary.btn-sm(data-toggle='modal', data-target='#contactFormModal') Contact us
        else 
          .d-flex.align-items-center
            a.btn.btn-outline-primary.mr-2(href="/jobs/"+job.slug target="_blank") Show in Frontend
            a.btn.btn-outline-primary.mr-2(href="/admin/jobs/edit/"+job.slug) Edit
            form.d-flex.justify-content-between(method='POST', action='/admin/jobs/delete/'+job.slug +'?_method=DELETE')
              button.btn.btn-outline-danger(type='submit') Delete
