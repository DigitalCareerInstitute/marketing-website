mixin courselist(public)
  ul.row
    each course in courses
      .card
        div.course-item.p-5.d-flex.flex-column.justify-content-between
          h1.text-justify=course.headline

                    
          form.d-flex.justify-content-between(method='POST', action='/admin/courses/delete/'+course.slug +'?_method=DELETE')

            if user.admin === "true"
              .d-flex.align-items-center
                a.btn.btn-outline-primary.mr-2(href="/courses/"+course.slug) Show
                
                a.btn.btn-outline-primary.mr-2(href="/admin/courses/edit/"+course.slug) Edit
                button.btn.btn-outline-danger(type='submit') Delete
