mixin storyImages(story, classes = " col-10 offset-1 col-md-8 offset-md-2")
  .row.position-relative
    .align-items-center(class=classes)
      img.object-fit-cover.img-fluid.rounded-circle.square(src="/media/pixel.gif" style="background-image: url('/images/"+story.avatar+"')" alt=story.subtitle )
    .col-5.position-absolute.align-items-center.bottom.right
      img.object-fit-cover.img-fluid.rounded-circle.square(alt=story.subtitle src="/media/pixel.gif" style="background-image: url('/images/"+story.companylogo+"')")

