mixin pagelist(public)
  ul.list-group
    each page in pages
      li.list-group-item.mb-3.hover-shadow
        h2.mr-3=page.title
        div.mr-3.mb-3
          if page.order
            span.mr-2.mb-2
              = "Order: "
              =page.order
          span.mr-2.mb-2
            if page.language && page.languageVersion
              =page.language.title
              = " translation: "
              a.mr-2(href="/admin/pages/edit/"+page.languageVersion.slug)=page.languageVersion.title
              
            
          each menulocation in page.menulocations
            span.badge.badge-primary.mb-2.mr-2=menulocation.name
        if user && user.admin === "true"
          form.d-flex.justify-content-between(method='POST', action='/admin/pages/delete/'+page.slug +'?_method=DELETE')
            a.btn.btn-outline-primary.mr-2(href="/pages/"+page.slug) Show

            .d-flex.align-items-center
              a.btn.btn-outline-primary.mr-2(href="/admin/pages/edit/"+page.slug) Edit
              button.btn.btn-outline-danger(type='submit') Delete
