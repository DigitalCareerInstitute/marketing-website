mixin pagelist(public)
  .row
    each page in pages
      .col-md-3.col-sm-6.mb-3
        .bg-white.p-3.hover-shadow.h-100
          h2.mr-3=page.title
          div.mr-3.mb-3
            if page.order
              span.mr-2.mb-2
                = "Order: "
                =page.order
            br
            if page.companypage
              span.badge.badge-primary.mb-2.mr-2
                = "companypage"
            if page.metapage
              span.badge.badge-primary.mb-2.mr-2
                = "metapage"
            each menulocation in page.menulocations
              span.badge.badge-primary.mb-2.mr-2=menulocation.name
          if user && user.admin === "true"
            +buttonGroup(page, `pages`)
