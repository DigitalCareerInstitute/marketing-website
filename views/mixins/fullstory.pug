mixin fullstory(model)
  div.story-item
    .row.mh-33
      .col-md-8
        .pt-3
          .position-relative.bg-light-blue.p-5.bg-panel
            blockquote.blockquote
              p.text-muted=model.excerpt
          .mt-4.brackets.bg-white.p-3
            p.text-justify !{model.toHTML}
      .col-md-4
        .sticky-top.text-center.pt-3
          .bg-light-blue.p-4
            +storyImages(model)
            h2
              if locals.pathclass === "stories"
                a.stretched-link(href=`/stories/${model.slug}`)
                  =model.title
              else
                =model.title
            table.table.p-4.small
              tbody
                tr
                  th Position
                  td= model.workPosition
