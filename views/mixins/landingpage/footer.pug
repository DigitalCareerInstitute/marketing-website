mixin footer
  footer.bg-white.site-footer(role='contentinfo' class=user ? "pb-5" : "")
    if currentPath !== "/users/login" && currentPath !== "/users/register"
      +newsletter
    section.footers.bg-light.pb-3
      .container.pt-5
        .row
          .col-xs-12.col-sm-6.col-md-4.footers-one
            .footers-logo
              p.font-weight-bold DCI Digital Career Institute
            .footers-info.mt-3
              p The Digital Career Institute was born as an initiative to integrate refugees into digital jobs. Today it is committed to train anyone who wants to pursue a tech career.

          .col-xs-12.col-sm-6.col-md-2.footers-two
            p.font-weight-bold Company 
            ul.list-unstyled
              li
                a(href='/about-us/') About us
              li
                a(href='https://dci-jobs.personio.de/') Jobs
              li
                a(data-toggle='modal',data-target='#contactFormModal',onclick="openModal()") Contact
              each page in footerPages
                li
                  a(href='/pages/'+ page.slug)
                    =page.title
                  if user && user.admin === "true"
                    a(href='/admin/pages/edit/'+ page.slug)
                      small.text-monospace= " (Edit)"
                    
          .col-xs-12.col-sm-6.col-md-2.footers-three
            p.font-weight-bold Courses 
            ul.list-unstyled
              li
                a(href='/courses') All courses
              each course in courses
                li
                  a(href='/courses/'+ course.slug)=course.headline
                  if user && user.admin === "true"
                    a(href='/admin/courses/edit/'+ course.slug)
                      small.text-monospace= " (Edit)"
          .col-xs-12.col-sm-6.col-md-2.footers-four
            p.font-weight-bold Community 
            ul.list-unstyled
              li
                a(target="_blank" href="https://www.facebook.com/digitalcareerinstitute") Facebook
              li
                a(target="_blank" href="https://twitter.com/DevugeesOrg") Twitter
              li
                a(target="_blank" href="https://medium.com/devugees") Medium
              li
                a(target="_blank" href="https://www.youtube.com/channel/UCSM_3ldxjcclGTcXaJRBYTw") YouTube
          
          .col-xs-12.col-sm-6.col-md-2.footers-five
            p.font-weight-bold Events 
            ul.list-unstyled
              li
                a(href='/events') All Events
              each location in locations
                li
                  a(href='/events/'+ location.name)=location.name
