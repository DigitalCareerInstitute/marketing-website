mixin upcomingEvents
  section#events.section-counter
    .container.container-events
      .section-title-area
        h5.section-subtitle Come see us
        h2.section-title Upcoming Events
      .row
        .col-md-8.col-md-offset-2
          each event in events
            .event-item
              if event
                time.event-item-date
                  span.event-month= event.start
                .event-item-body
                  h3.event-item-title
                    a(href=event.link)
                      = event.name
                  p.event-item-start
                    i.icon.fa.fa-clock-o
                    = event.start
                    br
                    strong= event.location.name

