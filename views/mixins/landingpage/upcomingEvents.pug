mixin upcomingEvents
  section#events.section-counter
    .container.container-events
      .section-title-area
        h5.section-subtitle Come see us
        h4.section-title Upcoming Event
    

      each event in events
        .newEvent
          .newEvent-media
            // media container
            .newEvent-media-object-cont
              img.newEvent-media-object(src=event.imageurl)
            // body container
            .newEvent-media-body
              .newEvent-media-body-top
                h5.subtle= event.name
              span.newEvent-media-body-heading This Thing Called Life: A Celebration of Prince and His Legacy at MEZZANINE SF
              .newEvent-media-body-supporting-bottom
                span.newEvent-media-body-supporting-bottom-text.subtle= event.location.street
                span.newEvent-media-body-supporting-bottom-text.subtle.u-float-right= event.location.name
              .newEvent-media-body-supporting-bottom.newEvent-media-body-supporting-bottom-reveal
                span.newEvent-media-body-supporting-bottom-text.subtle=event.location.name
                a.newEvent-media-body-supporting-bottom-text.newEvent-media-link.u-float-right(data-toggle='modal', data-target='#contactFormModal') Contact Us

        
