mixin ourCoursesSection
  section#services.section-services
    .container.container-courses
      .section-title-area
        h1.display-1.text-right.mx-5
          div.headingSection.display-1.font-weight-bold.text-left
            | OUR
          div.headingSection.display-1.font-weight-bold.text-left
            | COURSES
      .row.mx-5
        each course in courses
          .col-md-6.col-lg-4
            .service-item.p-4
              a.service-link(href="/courses/"+course.slug)
                span.screen-reader-text
                  = course.title
              .service-image.icon-image.mb-5
                img.h-100(src=course.icon, alt=course.title)
              .service-content
                h4.service-title= course.headline
                p=course.title

      .section-button-wrap
        a.btn.btn-lg.btn-primary.browserCourses.mx-5(href='/courses/', role='button', aria-pressed='true') Browse Courses
