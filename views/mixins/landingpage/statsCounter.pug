mixin statsCounter
  section#stats.section-counter.py-5.mb-5
    .container.container-counter
      .section-title-area
        h2.display-1.text-center.text-uppercase Why DCI
        h3.mb-5.text-center.text-muted Because we are cool
      .row.mx-5
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.counter-count 300
            .text-muted Students
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.counter-count 30
            .text-muted Courses Started
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.counter-count 250
            .text-muted Company Tours
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.counter-count 4
            .text-muted Locations
      
