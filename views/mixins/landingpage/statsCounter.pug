mixin statsCounter
  section#stats.section-counter.bg-light.py-5
    .container.container-counter
      .section-title-area
        h2.section-title.mb-3 Why Digital Career Institute
      .row.mx-5
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.n 300+
            .counter-title Students
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.n 30+
            .counter-title Courses Started
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.n 250+
            .counter-title Company Tours
        .col-sm-6.col-md-3
          .counter-item
            .counter-number
              span.n 3+
            .counter-title Locations
      
