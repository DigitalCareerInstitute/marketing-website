mixin getinvolved
  .container.mt-5.text-left.getInvolved-container
    .row.getInvolved-content
      h1.my-5.display-1.text-right
        div.getinvolved.display-1.font-weight-bold.text-left GET
        div.getinvolved.display-1.font-weight-bold INVOLVED
    .row.my-5
      div.verticalLineGetInv.p-5
        each page in pages
          h2.my-4
            div
               a.linksInvolved.text-center.px-3.py-1(class= currentPath === ("/pages/" + page.slug) ? "active" : "" href='/pages/'+ page.slug)=page.title
        h2.my-4
          div
            a.linksInvolved.text-center.px-3.py-1(href='/jobs/') Jobs
             
     
      
