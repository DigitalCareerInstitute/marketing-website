mixin singleEmployee(employee)
  li.col-md-6.col-sm-12.col-lg-4.d-flex.mb-4.text-center.mb-3
    .hover-shadow.bg-white.w-100
      if employee && employee.avatar !== "false"
        .mb-3
          img.rounded-circle.w-100.mw-150.mh-150.object-fit-cover(src="/images/"+employee.avatar)
      h3=employee.name
      h4=employee.position
      .mb-3
        each loc in employee.locations
          span.badge.badge-primary.mr-3= loc.name
      if user && user.admin === "true"
        form.d-flex.justify-content-between(method='POST', action='/admin/employees/delete/'+employee._id +'?_method=DELETE')
          .d-flex.align-items-center
            a.btn.btn-outline-primary.mr-2(href="/admin/employees/edit/"+employee._id) Edit
            button.btn.btn-outline-danger(type='submit') Delete