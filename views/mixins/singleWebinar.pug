mixin singleWebinar(webinar, index)
  a.col-md-4.mb-4(href=webinar.join_url, target="_blank")
    .card
      img.card-img-top(alt=webinar.name src=["/media/bg1.jpg", "/media/bg2.jpg", "/media/bg3.jpg", "/media/bg4.jpg", "/media/bg_small.png"][index % 5])
      .card-body.p-3
        .card-date.mr-2
          p.card-date-month.mb-0.mt-1=moment(webinar.start_time).format('MMM')
          p.card-date-day.text-center=moment(webinar.start_time).format('DD')
        .card-text
          p.event-name.mb-0= webinar.agenda
          p.event-date.mb-0=moment(webinar.start_time).format('MMMM Do YYYY, h:mm a')
          div.event-location= "Timezone: " + webinar.timezone
          div.event-location= "Durantion: "+ webinar.duration + " minutes"
