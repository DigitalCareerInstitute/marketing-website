extends layout.pug
block content
  .jumbotron.jumbotron-fluid.jumbotron-singleCourse.text-center.bg-transparent
    .bg-primary.position-fixed.left.top.z-minus.h-100.right
      img.half-transparent.w-100.h-100.object-fit-cover(alt="people programming" src='/media/bg2.jpg')
    .jumbotron-courses-container.text-white
      h1.display-1.mt-5.mb-3.text-white Stories
      p.lead.mb-5 Lets transform your future into one of our success stories

  .container.pt-3.bg-white.h-100
    .row
      each story in stories
        li.col-md-6.col-sm-12.col-lg-4.d-flex.mb-4
          .hover-shadow.bg-light.w-100
            +singleStory(story)
