extends layout.pug
block content
  .jumbotron.jumbotron-fluid.text-center.bg-transparent
    .jumbotron-courses-container
      h1.display-1.mt-5.mb-3=__("Stories")
      p.lead=__("Lets transform your future into one of our success stories")

  .container.h-100.pb-200
    .row
      each story in stories
        .position-relative
          .container
            +fullstory(story)
