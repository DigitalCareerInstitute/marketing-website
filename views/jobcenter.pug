extends layout.pug
block content
  .container
    .jumbotron.container.mb-0.px-3.bg-light.pb-0.bg-transparent.z-1.position-relative
      .row
        .col-md-6.order-12.order-md-1.py-5.pr-0.pr-sm-5
          h1.pt-5=__("Financing")
          p.mt-5.mb-5=__("You have found an exciting course, but don't know how to pay for it yet? No problem! We help you to find the right financing for you.")

          a.btn.btn-lg.btn-secondary.mb-3(href='/contact', data-toggle='modal', data-target='#contactFormModal')=__("Contact us")
        .col-md-6.order-1.order-md-12
          .bg-primary.bg-panel.h-50.position-absolute.bottom
          .px-lg-5.px-5.px-md-0.pb-5
            img.w-100.px-5.px-md-0.pb-5.pb-md-0.shift-bottom(src="/media/jobcenter_header1.jpg", alt="People working at computer")
            img.w-100.px-5.px-md-0.pb-5.pb-md-0.shift-right.mt-n5.ml-n5(src="/media/jobcenter_header2.jpg", alt="People working at computer")

  .bg-light
    if partners
      - partnersWithTestimonialsShown = partners.filter(p => p.testimonial_show)
      if partnersWithTestimonialsShown.length > 0
        .row
          each partner, index in partnersWithTestimonialsShown.splice(0,6)
            .col-md-4.col-6.text-center.my-4.d-flex.flex-column.justify-content-center.align-items-center
              img.mw-150.object-fit-contain(alt=partner.title, src="/images/" + partner.partnerlogo)

  .container
    .row
      .col-md-7
        =__("Who we are")
        p=__("The Ditial career purus sapien nec a felis malesuada eget rutrum volutpat torquent nisi mattis, conubia convallis porttitor ex metus adipiscing netus nibh sed. Eleifend porttitor duis class penatibus maximus eget natoque taciti, montes lectus mattis augue nec eros sapien blandit rhoncus, mauris egestas facilisis velit cursus pretium erat.")
      .col-md-5.text-center.order-md-12.mb-5.mb-5.mb-md-0
        .px-5.mb-4.text-left
          .px-sm-5.px-md-0.px-lg-5.text-left.text-md-center
            .px-5.px-md-0
              img.w-100.w-150(src="/media/azav.png", alt="")
  - ceo = employees.find(e => e.feature_on_jobcenter)
  if ceo
    .container.position-relative.mb-3.my-5
      .row
        .offset-md-4.col-md-8.pb-4.pt-5.d-flex.flex-column.justify-content-between.w-100.bg-light-blue.bg-panel.pl-md-0.order-12.order-md-1
          .row
            .col-md-10
              .position-relative.px-5
                blockquote.blockquote.mb-0
                  p.text-muted=ceo.content

                .text-right
                  div.font-weight-bold=ceo.name
                  span.font-weight-bold.text-muted= ceo.position

            .col-md-2.d-flex.flex-column.justify-content-end
              a.text-dark.stretched-link(href=`/stories/${ceo.slug}`)
                .mw-150.ml-auto
                  +storyImages(ceo, 'col')

  if courses
    .container
      h2=__('Our courses')
      p=__("We offer Purus sapien nec a felis malesuada eget rutrum volutpat torquent nisi mattis, conubia convallis porttitor ex metus adipiscing netus nibh sed. Eleifend porttitor duis")
      .row
        each course in courses
          .col-md-4
            .p-5(style=course && course.coloraccent ? `background-color: ${course.coloraccent.replace(/rgb/, "rgba").replace(/\)/, ", 0.33)")}` : `` )
              h5=course.headline
              .my-3
                strong.font-weight-bold.mr-2=__("Duration")+":"
                span.padded-text()= course.courselength
              .my-3
                strong.font-weight-bold.mr-2=__("Number")+":"
                span.padded-text()= course.massnahmeNumber
              .my-3
                strong.font-weight-bold.mr-2=__("Starts every")+":"
                span.padded-text()= course.startInterval
              .my-3
                strong.font-weight-bold.mr-2=__("Language")+":"
                span.padded-text()= course.courseLanguages

  .container
    =__("Find your contact person") 
    =__("Select location")
    .row
      .col-md-3
        .customselect

          select(class="jobcenter-location-select")
            each location in locations.filter(l => l.isCampus)
              option(data-address=`${location.street}, ${location.zip} ${location.name}`)=location.name
          
        
        .p-5.d-flex.justify-content-center.flex-column.align-items-center.text-center
          .w-5.h-5.text-muted.mb-4
            include ../assets/icons/jobcenter_location.svg
          - firstLocation = locations.filter(l => l.isCampus)[0]
          #jobcenter_address=`${firstLocation.street}, ${firstLocation.zip} ${firstLocation.name}`
      .col-md-7
        each employee in employees.filter(e => !e.feature_on_jobcenter)
          .row.jobcenter-location-employee(class=!employee.locations.map(l => l.name.toLowerCase()).includes(locations.filter(l => l.isCampus)[0].name.toLowerCase()) ? "hidden": "", data-location=employee.locations.map(l => l.name))
            .col-md-4
              .px-3.pt-3
                img.blue-shadow.object-fit-cover.img-fluid.rounded-circle.square(alt=employee.name src="/media/pixel.gif" style="background-image: url('/images/"+employee.avatar+"')")
            .col-md-8
              h6.font-weight-bold.mt-3=employee.name
              if employee.position
                .position-relative.z-1
                  p.text-muted.mb-1=employee.position

