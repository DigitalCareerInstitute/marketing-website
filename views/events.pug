extends layout.pug
block content
  .jumbotron.jumbotron-fluid.jumbotron-singleCourse.text-center.bg-transparent
    .bg-primary-transparent.position-fixed.left.top.z-minus.h-100
      img.half-transparent.w-100.h-100.object-fit-cover(src='/media/bg3.jpg')
    .jumbotron-courses-container.text-white
      h1.display-1.mt-5.mb-3.text-white All events in our locations
      p.lead.mb-3 Hackthons, Infoevents and Jobfairs

  .container.py-5.bg-white
      .row.my-5
        each location in eventsByLocation
          .col-md-6
            h2=location.name
            each event in location.events
              +singleEvent(event)


