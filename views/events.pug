extends layout.pug
block content
  .jumbotron.jumbotron-fluid.text-center
    .jumbotron-courses-container
      h1.display-1.mt-5.mb-3=__("All events in our locations")
      p.lead.mb-5=__("Hackthons, Infoevents and Jobfairs")

  .container.pb-200
    .row.pt-3
      each location in eventsByLocation
        .col-md-6
          h2=location.name
          each event in location.events
            +singleEvent(event)


