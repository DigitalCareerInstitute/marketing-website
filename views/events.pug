extends layout.pug
block content
  .jumbotron.jumbotron-fluid.text-center.mb-0
    .jumbotron-courses-container
      h1.display-1.mt-5.mb-3=__("All events in our locations")
      p.lead.mb-5=__("Hackthons, Infoevents and Jobfairs")

  .bg-light-blue.py-5
    .container.pb-200
      h2=__("All our events take place virtually as webinars.")
      .row.pt-3
        each webinar, index in zoomresponse.webinars
          +singleWebinar(webinar, index)


  .container.pb-200
    .row.pt-5
      // each location in eventsByLocation
        //if location.events.length > 0
        //  .col-md-6
        //    h2=location.name
      each event in eventsByLocation
        +singleEvent(event)


