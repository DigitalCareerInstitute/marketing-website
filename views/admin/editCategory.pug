extends ../layout.pug
block content
  .container.my-5
    h1 Edit category
    a.btn.mr-3.btn-outline-primary(href="/admin/categories")="Back"
    button.btn.btn-primary(type='submit') Update
    form.my-3.form-signin(method='POST', action='/admin/categories/update/'+category._id+'?_method=PUT')
      
      .mb-3
        label(for='inputName') Name
        input#inputName.form-control(name='name', type='text', placeholder='Name', value=category.name required='', autofocus='')
        

