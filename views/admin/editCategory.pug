extends ../layout.pug
block content
  .container.mt-5
    h1 Edit category
    form.mb-3.form-signin(method='POST', action='/admin/categories/update/'+category._id+'?_method=PUT')
      
      .mb-3
        label.sr-only(for='inputName') Name
        input#inputName.form-control(name='name', type='text', placeholder='Name', value=category.name required='', autofocus='')
        
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Update

    a.btn.btn-outline-primary(href="/admin/categories")="Back"
