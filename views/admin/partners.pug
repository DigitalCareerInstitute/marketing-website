extends ../layout.pug
block content
  .container-fluid
    h1 Partners
    .row
      .col-md-8
        .row
          each partner in partners
            .col-md-3.mb-3
              h2.mr-3=partner.title
              if partner && partner.partnerlogo
                img.w-100.mw-150.mh-150.object-fit-cover(alt=partner.title src="/images/"+partner.partnerlogo)
              div.mr-3
                span.mr-2.mb-2
                  = "Order: "
                  =partner.order

              if user && user.admin === "true"
                form.d-flex.justify-content-between(method='POST', action='/admin/partners/delete/'+partner._id +'?_method=DELETE')
                  a.btn.btn-outline-primary.mr-2(href="/partners/"+partner._id) Show

                  .d-flex.align-items-center
                    a.btn.btn-outline-primary.mr-2(href="/admin/partners/edit/"+partner._id) Edit
                    button.btn.btn-outline-danger(type='submit') Delete
      .col-md-4
        +partnerForm



