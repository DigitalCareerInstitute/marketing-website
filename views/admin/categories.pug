extends ../layout.pug
block content
  .container
    h1 Page categories
    .row
      .col-md-8
        ul.list-group
          each category in categories
            li.list-group-item.mb-3
              h2.mr-3=category.name
              = category.pages
              form.d-flex.justify-content-between(method='POST', action='/admin/categories/delete/'+category._id +'?_method=DELETE')
                if user
                  .d-flex.align-items-center
                    a.btn.btn-outline-primary.mr-2(href="categories/edit/"+category._id) Edit
                    button.btn.btn-outline-danger(type='submit') Delete

      .col-md-4
        form.form-signin(method='POST', action='/admin/categories?alert=create')
          h2 Create a new Category
          
          .mb-3
            label(for='inputName') Name
            input#inputName.form-control(name='name', type='text', placeholder='Name', required='', autofocus='')
            
            
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Create
