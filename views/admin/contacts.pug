extends ../layout.pug
block content
  //
  .container.mt-5.text-left
    .row
      .col-md-8
        h2 All received contacts

        ul.list-group
          each contact in contacts
            li.list-group-item.mb-3
              h2.mr-3=contact.name
              small.text-muted=contact.createdAt
              p.mr-3=contact.body
              a.mr-3(href='mailto:'+ contact.email)=contact.email
              hr
              h4 
                span Interested in: 
                each location in contact.locations
                  .badge.badge-primary.mr-2=location.name
