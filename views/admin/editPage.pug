extends ../layout.pug
block content
  .container.mt-5.text-left
          
    .row
      .col
        h1 Edit page
        form.mb-3.form-signin(method='POST', action='/admin/pages/update/'+page._id+'?_method=PUT')
          
          .mb-3
            label.sr-only(for='inputTitle') Title
            input#inputTitle.form-control(name='title', type='text', placeholder='Title', value=page.title required='', autofocus='')
            
          .mb-3
            label.sr-only(for='inputContent') Content
            textarea#inputContent.form-control(rows='20' name='content', type='password', placeholder='Content', required='')=page.content
          .mb-3
            label.sr-only(for='inputContent') Order
            input#inputOrder.form-control(name='order', type='number',
            min=-1 max=maxOrder placeholder='Order', value=page.order, required='', autofocus='')

          button.btn.btn-lg.btn-primary.btn-block(type='submit') Update

        a.btn.btn-outline-primary(href="/admin/pages")="Back"
