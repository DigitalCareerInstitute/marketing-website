extends layout.pug
block content
  +navigation
  .container.mt-5.text-left
    h1 Edit post
          
    form.form-signin(method='POST', action='./posts/update/'+post._id+'?_method=PUT')
      h1.h3.mb-3.font-weight-normal Create a new Post
      
      .mb-3
        label.sr-only(for='inputName') Name
        input#inputName.form-control(name='name', type='text', placeholder='Name', value=post.name required='', autofocus='')
        
      .mb-3
        label.sr-only(for='inputContent') Content
        textarea#inputContent.form-control(name='content', type='password', placeholder='Content', required='')=post.content
      .mb-3
        label.sr-only(for='inputContent') Order
        input#inputOrder.form-control(name='order', type='number', placeholder='Order', value=post.order, required='', autofocus='')
        
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Update

      a(href="./posts")="Back"
