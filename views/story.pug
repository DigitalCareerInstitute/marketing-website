extends layout.pug
block content
  div.story-item.py-5
    .position-relative.pb-200
      .container
        .row
          .col-md-8
            .pt-3.mt-5
              .position-relative.bg-light-blue.p-5.bg-panel.right
                blockquote.blockquote
                  p.text-muted=story.excerpt
              .mt-4.brackets.bg-white.p-3
                p.text-justify !{story.toHTML}
          .col-md-4
            .sticky-top.my-5.text-center.pt-3
              .bg-light-blue.p-4
                +storyImages(story)
                h2.mt-3=story.title
                table.table.p-4.small
                  tbody
                    tr
                      th Position
                      td= story.workPosition
