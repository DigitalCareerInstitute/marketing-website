extends layout.pug
block content
  .jumbotron.container.text-center.bg-transparent.pb-200
    h1.text-primary.mt-5.mb-3=__("Become our Hiring Partner")
    h2.font-weight-light.mb-3=__("We connect companies to the most talented Web Developers and Online Marketers.")
  div.careerwave.pb-5
    .container.container-counter.mt-4.pb-5
      .offset-md-3.col-md-9.offset-lg-7.col-lg-5.py-5
        img.w-100.shift-top-200(src="/media/hero.png", alt="")
      .col-12.py-5
        .row
          .col-sm-6.col-md-3
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.landingpage_archivements_students || 600
                  = "+"
              h4.font-weight-bold.bar-bottom.shadowed.center.pb-4: +translate("Students")
          .col-sm-6.col-md-3
            .counter-item
              .counter-number.font-weight-bol
                h2.display-1
                  span.counter-count=locals.settings.landingpage_archivements_courses || 50
                  = "+"
              h4.font-weight-bold.bar-bottom.shadowed.center.pb-4
                +translate("Courses started")
          .col-sm-6.col-md-3
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.landingpage_archivements_tours || 300
                  = "+"
              h4.font-weight-bold.bar-bottom.shadowed.center.pb-4: +translate("Company tours")
          .col-sm-6.col-md-3
            .counter-item
              .counter-number.font-weight-bold
                h2.display-1
                  span.counter-count=locals.settings.landingpage_archivements_locations || 5
              h4.font-weight-bold.bar-bottom.shadowed.center.pb-4: +translate("Locations")
        .mt-5.text-center
          .my-5.btn.btn-lg.btn-outline-white.rounded-md.py-3.px-5.display-2.font-weight-light
            =__("Become a Hiring Partner")
  .container.pt-5
    .px-lg-5.pb-lg-5
      h2.mb-3.bar-bottom.pb-3.mb-4
        =__("What makes our graduates?")
        =" "
        span.badge-primary.p-1=__("stand out")
      p.text-muted.mb-5=__("Our 1-year program develops higly-motivated individuals into great tech and digital professionals with a broad skill set.")
      .row
        .col-md-6.d-flex.flex-column
          h5.font-weight-normal=__("WebDev Tech Stack ðŸš€")
          .bg-primary-light.rounded-lg.p-3.flex-grow-1.mr-md-3
            ul.mb-3
              li.float-right.list-style-none
                img.rounded-circle.w-8.h-8.bg-white.shift-vertical-md-margin.border.border-primary(src="/media/code.svg", alt="")
              li.pt-5.mb-2=__("Basic Digital Literacy")              
              li.mb-2=__("User Interface Basics: HTML, CSS")
              li.mb-2=__("Programming Basics: JavaScript")
              li.mb-2=__("SPA - Single Page Applications")
              li.mb-2=__("Backend Development")
        .col-md-6.d-flex.flex-column
          h5.font-weight-normal.ml-md-3=__("Online Marketing Stack ðŸŽ¯")
          .bg-red-light.rounded-lg.p-3.flex-grow-1.ml-md-3
            ul.mb-3mt-5
              li.float-right.list-style-none
                img.rounded-circle.w-8.h-8.bg-white.shift-vertical-md-margin.border.border-red(src="/media/om.svg", alt="")
              li.pt-5.mb-2=__("Introduction to Marketing")              
              li.mb-2=__("SEO and Analytics: Google Analytics & Ahrefs")
              li.mb-2=__("SEA & Display Marketing: Google Ads")
              li.mb-2=__("Social Media Marketing")
              li.mb-2=__("Email Marketing")
              li.mb-2=__("Press Relations")


  .container.mt-5
    .mb-3
      =__( "Additional training" )
    .d-flex.d-column.d-md-row.justify-content-between.mb-4.text-center
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_training.svg
        =__("Soft Skill Training")
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_time.svg
        =__("Time management")
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_management.svg
        =__("Agile project management")
    .d-flex.d-column.d-md-row.justify-content-between.text-center
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_language.svg
        =__("Language courses")
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_job.svg
        =__("Job coaching")
      .bg-light-yellow.rounded-lg.d-flex.flex-column.align-items-center.py-2.px-4.w-11
        .mb-2.w-3.d-flex 
          include ../assets/media/careersuccess_service.svg
        =__("Mentoring")

  .container
    .my-5
      h2.pb-3.bar-bottom
        =__("What companies")
        span.badge.badge-primary-trans.text-primary.font-weight-normal.mx-1=__("love")
        =("about our graduates?")
    #careersuccesscarousel.carousel.slide(data-ride="carousel")
      .carousel-inner
        each partner, index in partners.filter(p => p.testimonial_name && p.testimonial_job && p.testimonial_content )
          //if index === 0
          .carousel-item.bg-primary-light.p-4.rounded-lg(class= index === 0 ? ` active` : ``)
            if user && partner && user.userId === partner.userId || user && user.admin === "true"
              a.position-absolute.right.bottom.btn.btn-outline-primary.z-foreground(href=`/admin/stories/edit/${partner.slug}`) Edit
                
            .d-flex.justify-content-between.align-items-start
              img.mw-150.object-fit-contain(alt=partner.title, src="/images/" + partner.partnerlogo)
              
              div.text-right
                h3=partner.testimonial_name
                h4.font-italic=partner.testimonial_job
            .p-5
              blockquote.blockquote=partner.testimonial_content

      a.carousel-control-prev(href="#careersuccesscarousel" role="button" data-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.sr-only Previous
      a.carousel-control-next(href="#careersuccesscarousel" role="button" data-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.sr-only Next


  div.mt-5
    .careerwave.py-5
      .py-5
        .container.py-5
          h2.pb-3.bar-bottom.my-4=__("Our Hiring Network")
          h3.mb-=__("More than 400+ company partners ")
          each partner, index in partners
            img.mw-150.object-fit-contain(alt=partner.title, src="/images/" + partner.partnerlogo)

  .container.my-5
    h2.pb-3.bar-bottom
      =__("How our hiring partners")
      = " "
      span.badge.badge-primary=__("benefit")
      ="?"
    .row.text-center
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_cv.svg
              h3=__("Access our student profiles even before graduation")
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_event.svg
              h3=__("Participate at our events for free")
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_home_office.svg
              h3=__("Host a company tour for our students")
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_tips.svg
              h3=__("Receive financial support when hiring DCI graduates")
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_permanent_job.svg
              h3=__("Hire our graduates")
      .col-md-6
        .p-4
          .p-4
            .border.border-primary.rounded-lg.d-flex.flex-column.align-items-center.py-5.px-3
              .mb-4.w-5.d-flex.text-primary
                include ../assets/media/careersuccess_lecturer.svg
              h3=__("Give an Industry Lecture")

  .container.text-center
    h2.display-1.font-weight-light.mb-5.text-primary=__("Fill Your Open Vacancies")
    h3.display-2.font-weight-light.mb-5=__("For web developers and online marketers")
    a.btn.btn-primary.btn-lg(href="") 
      =__("Become a Hiring Partner")
  .w-100
    include ../assets/media/careersuccess_waveline.svg
  .pb-200
  .pb-200

