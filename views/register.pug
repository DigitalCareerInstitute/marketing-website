extends layout.pug
block content
  .bg-light.h-100
    .container.py-5
      .row.py-5
        .col-md-6.offset-md-3.p-3.card
          h1 Register

          form.mb-3(method='post' action='/users/register')
            .form-group
              label Email
              input.form-control(type='email' placeholder='Email' name='email')
            .form-group
              label Username
              input.form-control(type='text' placeholder='Username' name='username')
            .form-group
              label Password
              input.form-control(type='password' placeholder='Password' name='password')
            .form-group
              label Confirm Password
              input.form-control(type='password' placeholder='Password' name='password2')
            button.btn.btn-primary(type='submit') Register
          a(href="/users/login") Already have an account? Login

