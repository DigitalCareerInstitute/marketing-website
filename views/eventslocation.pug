extends layout.pug
block content
  .container
    h1.text-center See our recent Events

    ul.list-group
      each event in events
        li.list-group-item.mb-3
          a(href=event.url target='_blank')=event.name
          br
          =event.start
          br
          =event.text
          br
          span=event.location.name
